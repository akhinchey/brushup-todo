
<% if @errors %>
<ul>
  <% @errors.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for :user, url: "/users" do |f| %>

  Username:
  <br>
  <%= f.text_field :username %>
  <br>
  Email:
  <br>
  <%= f.text_field :email %>
  <br>
  Password:
  <br>
  <%= f.password_field :password %>
  <br>
  Password Confirmation:
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Create New User" %>

<% end %>